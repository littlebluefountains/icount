<div class = 'form-horizontal span6'>
	<%= simple_form_for @sales_period do |f| %>
		<!--%= render partial: 'layouts/error', object: @employee %-->

		<fieldset>
			<legend>Basic Information</legend>
			<%= f.input :name, placeholder: 'Name' %>
			<%= f.input :description, placeholder: 'Description', as: :text, input_html: { rows: 5 } %>
			<%= f.input :start_time %>
			<%= f.input :end_time %>
		</fieldset>
		
		
		
		 <div class="form-actions">
		    <%= f.submit "Save", class: 'btn btn-primary' %>
		    <%= link_to 'Back', sales_periods_path, class: 'btn btn-inverse' %>
		  </div>	

	<% end %>
</div>