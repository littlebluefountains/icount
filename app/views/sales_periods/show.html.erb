<h1>Sales Period: <%= @sales_period.name %></h1>
<div class="span6">
	<table class="table table-striped table-bordered">
		<tr><td>Name</td><td><%= @sales_period.name  %></td></tr>
		<tr><td>Description</td><td><%= @sales_period.description %></td></tr>
		<tr><td>Start Time</td><td><%= @sales_period.start_time.strftime("%T") %></td></tr>
		<tr><td>End Time</td><td><%= @sales_period.end_time.strftime("%T") %></td></tr>

	</table>
	<%= link_to 'All Sales Period', sales_periods_path %>
</div>