<h1>Stock Reports For Tanks</h1>

<div class="span5 well">
	<h3>Recent Stocks</h3>
	<table class="table table-striped">
		<tr>
			<th>Tank</th>
			<th>Station</th>
			<th>Stock Level</th>
			
		</tr>
		<% @unique_stocks.each do |stock|  %>
			<tr>
				<td><%= stock.tank.name %></td>
				<td><%= stock.tank.station.name  %></td>
				<td><%= stock.current_stock%></td>
				
			</tr>
		<% end %>
	</table>
</div>

<div class="span5 well">
	<h3>All Stocks</h3>
	<table class="table table-striped">
		<tr>
			<th>Tank</th>
			<th>Station</th>
			<th>Stock Level</th>
			
		</tr>
		<% @stocks.each do |stock|  %>
			<tr>
				<td><%= stock.tank.name %></td>
				<td><%= stock.tank.station.name  %></td>
				<td><%= stock.current_stock%></td>
				
			</tr>
		<% end %>
	</table>
</div>

