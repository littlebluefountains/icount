<h3>Users</h3>

<table class="table table-striped">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role(s)</th>
    <th><%= link_to raw('<i class="icon-plus icon-white"></i> Add'), new_user_path, class: "btn btn-inverse" %></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%=  %></td>
      <td><%= link_to raw('<i class="icon-edit"></i>'), edit_user_path(user), class: "btn btn-success" %> |
          <%= link_to raw('<i class="icon-trash"></i>'), user, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>

