<div class = 'form-horizontal span6'>
	<%= simple_form_for @product do |f| %>
		<!--%= render partial: 'layouts/error', object: @employee %-->

		<fieldset>
			<legend>Basic Information</legend>
			<%= f.input :code, placeholder: 'Code' %>
			<%= f.input :name, placeholder: 'Name' %>
			<%= f.input :description, placeholder: 'Description', as: :text, input_html: { rows: 3 } %>
			<%= f.input :unitprice, placeholder: 'Unit Price', label: 'Unit Price' %>
		</fieldset>
			
		 <div class="form-actions">
		    <%= f.submit "Save", class: 'btn btn-primary' %>
		    <%= link_to 'Back', products_path, class: 'btn btn-inverse' %>
		  </div>	

	<% end %>
</div>