<h3>Report Users</h3>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Receive Mail?</th>
    <th>Receive SMS?</th>
    <th><%= link_to raw('<i class="icon-plus icon-white"></i> Add'), new_report_user_path, class: "btn btn-inverse" %></th>
  </tr>

  <% @report_users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.receive_mail %></td>
      <td><%= user.receive_sms %></td>
      <td><%= link_to raw('<i class="icon-edit"></i>'), edit_report_user_path(user), class: "btn btn-success" %> |
          <%= link_to raw('<i class="icon-trash"></i>'), user, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>

<br />

