<h3>Roles</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Role</th>
      <th><%= link_to raw('<i class="icon-plus icon-white"></i> Add'), new_role_path, class: "btn btn-inverse" %></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, role %></td>
         <td><%= link_to raw('<i class="icon-edit"></i>'), edit_role_path(role), class: "btn btn-success" %> |
          <%= link_to raw('<i class="icon-trash"></i>'), role, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

