<div class = 'form-horizontal span6 well'>
	<%= simple_form_for @role do |f| %>
		
		<%= render partial: 'layouts/error', object: @role %>

		<%= f.input :name %>

		 <div class="form-actions">
		   <%= f.submit "Save", class: "btn btn-primary"%>
